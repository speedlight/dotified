# this file goes in ~
background no
use_xft yes
xftfont monospace:pixelsize=11
xftalpha 1
update_interval 1.0
total_run_times 0
own_window yes
own_window_type override
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
draw_shades no
draw_graph_borders yes
default_color cyan
default_shade_color black
default_outline_color white
alignment top_left
gap_x 1040
gap_y 30
cpu_avg_samples 2
net_avg_samples 2
override_utf8_locale yes

maximum_width 350

color1 DC143C
color2 DC143C

TEXT
